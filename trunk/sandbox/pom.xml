  <build>
    <defaultGoal>install</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <encoding>UTF-8</encoding>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>6.1.7</version>
        <configuration>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>8080</port>
              <maxIdleTime>3600000</maxIdleTime>
            </connector>
          </connectors>
          <scanIntervalSeconds>10</scanIntervalSeconds>
          <webDefaultXml>src/webdefault.xml</webDefaultXml>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/assembly-descriptor.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>post-clean</phase>
            <goals>
              <goal>attached</goal>
            </goals>
          </execution>
        </executions>
        <inherited>false</inherited>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>format-java-sources</id>
            <phase>process-sources</phase>
            <configuration>
              <tasks>
                <delete>
                  <fileset dir="${basedir}" includes="**/*.bak"/>
                </delete>
                <taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.compile.classpath"/>
                <if>
                  <not>
                    <or>
                      <equals arg1="${project.packaging}" arg2="pom"/>
                      <equals arg1="${skip.jalopy}" arg2="true"/>
                    </or>
                  </not>
                  <then>
                    <taskdef name="jalopy" classname="de.hunsicker.jalopy.plugin.ant.AntPlugin" classpathref="maven.compile.classpath"/>
                    <jalopy history="FILE" historymethod="timestamp" encoding="UTF-8" convention="src/jalopy.xml">
                      <fileset dir="${basedir}/src/main/java" includes="**/*.java"/>
                      <fileset dir="${basedir}/src/test/java" includes="**/*.java"/>
                    </jalopy>
                  </then>
                </if>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>clean-backup-files</id>
            <phase>pre-clean</phase>
            <configuration>
              <tasks>
                <delete>
                  <fileset dir="${basedir}">
                    <include name="**/*.bak"/>
                    <include name="**/Thumbs.db"/>
                    <include name="cobertura.ser"/>
                    <include name="*.log"/>
                    <include name="*.log.*"/>
                    <include name="*.log.*"/>
                    <include name="log.txt"/>
                  </fileset>
                </delete>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>pre-test</id>
            <phase>test-compile</phase>
            <configuration>
              <tasks>
                <taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.compile.classpath"/>
                <if>
                  <not>
                    <or>
                      <equals arg1="${maven.test.skip}" arg2="true"/>
                      <equals arg1="${project.packaging}" arg2="pom"/>
                      <equals arg1="${skip-db-test}" arg2="true"/>
                    </or>
                  </not>
                  <then>
                    <echo>pre-test</echo>
                    <property environment="env"/>
                    <mkdir dir="${basedir}/target/hsqldb"/>
                    <copy todir="${basedir}/target/hsqldb/">
                      <fileset dir="${basedir}/src/main/webapp/db/"/>
                    </copy>
                    <java classname="anni.core.test.HsqldbHelper" classpathref="maven.compile.classpath">
                      <arg value="startServer"/>
                    </java>
                  </then>
                </if>
              </tasks>
              <skip>${maven.test.skip}</skip>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>post-test</id>
            <phase>test</phase>
            <configuration>
              <tasks>
                <taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.compile.classpath"/>
                <if>
                  <not>
                    <or>
                      <equals arg1="${maven.test.skip}" arg2="true"/>
                      <equals arg1="${project.packaging}" arg2="pom"/>
                      <equals arg1="${skip-db-test}" arg2="true"/>
                    </or>
                  </not>
                  <then>
                    <echo>post-test</echo>
                    <property environment="env"/>
                    <java classname="anni.core.test.HsqldbHelper" classpathref="maven.compile.classpath">
                      <arg value="stopServer"/>
                    </java>
                  </then>
                </if>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>jalopy</groupId>
            <artifactId>jalopy-ant</artifactId>
            <version>0.1-1.5b5</version>
          </dependency>
          <dependency>
            <groupId>jalopy</groupId>
            <artifactId>jalopy</artifactId>
            <version>1.5rc3</version>
          </dependency>
          <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b2</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
