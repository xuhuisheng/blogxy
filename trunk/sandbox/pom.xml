              <execution>
                <id>surefire-it</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <skip>false</skip>
                  <excludes>
                    <exclude>**/Abstract*</exclude>
                  </excludes>
                  <includes>
                    <include>**/selenium/**/*Test.java</include>
                    <include>**/selenium/**/*TestCase.java</include>
                  </includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
